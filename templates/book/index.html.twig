{% extends 'base.html.twig' %}

{% block title %}Book library{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Book List</h1>
    <a href="/new">Add Book</a>
    <table>
        <thead>
            <tr>
                <td>Title</td>
                <td>Author</td>
                <td>Cover</td>
                <td>File</td>
                <td>Date</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
	            <td><a href="{{ path('view', {'id': book.id}) }}">{{ book.title }}</a></td>
                <td>{{ book.author }}</td>
                <td>{{ book.cover }}</td>
                <td>{{ book.file }}</td>
                <td>{{ book.date|date("d/m/Y") }}</td>
                <td><a href="{{ path('edit', {'id': book.id}) }}">Edit</a><a href="{{ path('delete', {'id': book.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
