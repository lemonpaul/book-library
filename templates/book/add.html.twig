{% extends 'base.html.twig' %}

{% block main %}
<div class="m-3">
    <h1 class="center">Add Book</h1>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-6 label">
                Title:
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 label">
                Author:
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.author) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 center">
                {{ form_errors(form.cover) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 label">
                Cover file:
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.cover) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 center">
                {{ form_errors(form.file) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 label">
                Book file:
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.file) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 label">
                Read date:
            </div>
            <div class="col">
                {{ form_widget(form.date) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 label">
                Allow downloading:
            </div>
            <div class="col-sm-6">
                {{ form_widget(form.download) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 center">
                {{ form_widget(form.save, { attr: {class: "btn btn-primary"} }) }}
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
