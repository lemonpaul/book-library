{% extends 'base.html.twig' %}

{% block main %}
<div class="m-3">
    <h1 class="text-center">Edit Book</h1>
    {{ form_start(form) }}
    <div class="row">
        <div class="col text-right">
            Title:
        </div>
        <div class="col">
            {{ form_widget(form.title) }}
        </div>
        </div>
        <div class="row">
            <div class="col text-right">
                Author:
            </div>
            <div class="col">
                {{ form_widget(form.author) }}
            </div>
        </div>
        <div class="row">
            <div class="col text-right">
                Read date:
            </div>
            <div class="col">
                {{ form_widget(form.date) }}
            </div>
        </div>
        <div class="row">
            <div class="col text-right">
                Allow downloading:
            </div>
            <div class="col">
                {{ form_widget(form.download) }}
            </div>
        </div>
        {% if book.cover %}
        <div class="row">
            <div class="col text-center">
                {{ cover(book.cover, 200, 200)|raw }}
            </div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col text-center">
                {{ form_widget(form.delete_cover, { attr: {class: "btn btn-danger"} }) }}
            </div>
        </div>
        {% if book.file %}
            <div class="row">
                <div class="col text-center">
                    {{ book.file }}
                </div>
            </div>
        {% endif %}
        <div class="row">
            <div class="col text-center">
                {{ form_widget(form.delete_file, { attr: {class: "btn btn-danger"} }) }}
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                {{ form_widget(form.save, { attr: {class: "btn btn-primary"} }) }}
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
